<% content_for(:title) { "#{@destination.name} - Destinations" } %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <div class="text-sm breadcrumbs">
        <ul>
          <li><%= link_to "Destinations", destinations_path %></li>
          <li><%= @destination.name %></li>
        </ul>
      </div>
      <h1 class="text-3xl font-bold mt-2"><%= @destination.name %></h1>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_destination_path(@destination), class: "btn btn-outline" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      <%= link_to destination_path(@destination), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this destination?" }, class: "btn btn-error btn-outline" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid lg:grid-cols-2 gap-6">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Destination Details</h2>
        <div class="overflow-x-auto">
          <table class="table">
            <tbody>
              <tr>
                <th class="w-1/3">URL</th>
                <td><code class="bg-base-200 px-2 py-1 rounded text-sm break-all"><%= @destination.url %></code></td>
              </tr>
              <tr>
                <th>HTTP Method</th>
                <td><span class="badge badge-outline"><%= @destination.http_method %></span></td>
              </tr>
              <tr>
                <th>Status</th>
                <td><%= status_badge(@destination.status) %></td>
              </tr>
              <tr>
                <th>Auth Type</th>
                <td><span class="badge badge-outline"><%= @destination.auth_type.titleize %></span></td>
              </tr>
              <tr>
                <th>Timeout</th>
                <td><%= @destination.timeout_seconds || 30 %> seconds</td>
              </tr>
              <tr>
                <th>Max Delivery Rate</th>
                <td>
                  <% if @destination.max_delivery_rate %>
                    <%= @destination.max_delivery_rate %> req/sec
                  <% else %>
                    <span class="text-base-content/50">Unlimited</span>
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>Expected Status Code</th>
                <td>
                  <% if @destination.expected_status_code %>
                    <span class="badge badge-outline"><%= @destination.expected_status_code %></span>
                  <% else %>
                    <span class="text-base-content/50">Any 2xx</span>
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>Custom Headers</th>
                <td>
                  <% if @destination.headers.present? %>
                    <pre class="bg-base-200 px-2 py-1 rounded text-sm overflow-x-auto"><%= JSON.pretty_generate(@destination.headers) %></pre>
                  <% else %>
                    <span class="text-base-content/50">None</span>
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>Created</th>
                <td><%= @destination.created_at.strftime("%B %d, %Y at %I:%M %p") %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="flex justify-between items-center">
          <h2 class="card-title">Connections (<%= @connections.count %>)</h2>
          <%= link_to new_connection_path(destination_id: @destination.id), class: "btn btn-sm btn-primary" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add Connection
          <% end %>
        </div>
        <% if @connections.any? %>
          <div class="overflow-x-auto">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Source</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% @connections.each do |connection| %>
                  <tr>
                    <td>
                      <%= link_to connection.source.name, source_path(connection.source), class: "link link-hover" %>
                    </td>
                    <td><%= status_badge(connection.status) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8 text-base-content/60">
            <p>No connections yet.</p>
            <p class="text-sm mt-1">Add a connection to receive webhooks from a source.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
