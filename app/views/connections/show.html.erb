<% content_for(:title) { "#{@connection.name.presence || "Connection"} - Connections" } %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <div class="text-sm breadcrumbs">
        <ul>
          <li><%= link_to "Connections", connections_path %></li>
          <li><%= @connection.name.presence || "#{@connection.source.name} → #{@connection.destination.name}" %></li>
        </ul>
      </div>
      <h1 class="text-3xl font-bold mt-2">
        <% if @connection.name.present? %>
          <%= @connection.name %>
        <% else %>
          <%= @connection.source.name %> → <%= @connection.destination.name %>
        <% end %>
      </h1>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_connection_path(@connection), class: "btn btn-outline" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      <%= link_to connection_path(@connection), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this connection?" }, class: "btn btn-error btn-outline" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid lg:grid-cols-2 gap-6">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Connection Details</h2>
        <div class="overflow-x-auto">
          <table class="table">
            <tbody>
              <tr>
                <th class="w-1/3">Source</th>
                <td>
                  <%= link_to @connection.source.name, source_path(@connection.source), class: "link link-primary" %>
                </td>
              </tr>
              <tr>
                <th>Destination</th>
                <td>
                  <%= link_to @connection.destination.name, destination_path(@connection.destination), class: "link link-primary" %>
                </td>
              </tr>
              <tr>
                <th>Status</th>
                <td><%= status_badge(@connection.status) %></td>
              </tr>
              <tr>
                <th>Priority</th>
                <td><span class="badge badge-ghost"><%= @connection.priority %></span></td>
              </tr>
              <tr>
                <th>Created</th>
                <td><%= @connection.created_at.strftime("%B %d, %Y at %I:%M %p") %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Rules</h2>
        <% if @connection.rules.present? %>
          <pre class="bg-base-200 px-4 py-3 rounded text-sm overflow-x-auto"><%= JSON.pretty_generate(@connection.rules) %></pre>
        <% else %>
          <div class="text-center py-8 text-base-content/60">
            <p>No rules configured.</p>
            <p class="text-sm mt-1">All webhooks from the source will be forwarded to the destination.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Flow Overview</h2>
      <div class="flex items-center justify-center gap-4 py-6">
        <div class="card bg-base-200 px-6 py-4">
          <div class="text-sm text-base-content/60">Source</div>
          <div class="font-bold"><%= @connection.source.name %></div>
          <div class="text-xs text-base-content/50 mt-1"><%= @connection.source.verification_type.name %></div>
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </div>
        <div class="card bg-base-200 px-6 py-4">
          <div class="text-sm text-base-content/60">Destination</div>
          <div class="font-bold"><%= @connection.destination.name %></div>
          <div class="text-xs text-base-content/50 mt-1"><%= @connection.destination.http_method %> request</div>
        </div>
      </div>
    </div>
  </div>
</div>
