<% content_for(:title) { "Connections - #{current_organization.name}" } %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold">Connections</h1>
      <p class="text-base-content/60 mt-1">Link sources to destinations to route webhooks</p>
    </div>
    <%= link_to new_connection_path, class: "btn btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      New Connection
    <% end %>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <% if @connections.any? %>
        <%= render "shared/pagination", position: :top %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Source</th>
                <th>Destination</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Copy URL</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @connections.each do |connection| %>
                <tr>
                  <td class="font-medium">
                    <% if connection.name.present? %>
                      <%= connection.name %>
                    <% else %>
                      <span class="text-base-content/50">Unnamed</span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to connection.source.name, source_path(connection.source), class: "link link-hover" %>
                  </td>
                  <td>
                    <%= link_to connection.destination.name, destination_path(connection.destination), class: "link link-hover" %>
                  </td>
                  <td><%= status_badge(connection.status) %></td>
                  <td><span class="badge badge-ghost"><%= connection.priority %></span></td>
                  <td>
                    <div class="tooltip" data-tip="Copy ingest URL" data-controller="clipboard" data-clipboard-success-content-value="Copied!">
                      <input type="hidden" value="<%= request.base_url %><%= connection.source.ingest_url %>" data-clipboard-target="source">
                      <button type="button" data-action="clipboard#copy" data-clipboard-target="button" class="btn btn-ghost btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                      </button>
                    </div>
                  </td>
                  <td>
                    <div class="flex gap-1">
                      <%= link_to connection_path(connection), class: "btn btn-ghost btn-sm", title: "View" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                      <% end %>
                      <%= link_to edit_connection_path(connection), class: "btn btn-ghost btn-sm", title: "Edit" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                      <%= link_to connection_path(connection), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this connection?" }, class: "btn btn-ghost btn-sm text-error", title: "Delete" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= render "shared/pagination", position: :bottom %>
      <% else %>
        <div class="text-center py-12">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          <h3 class="mt-4 text-lg font-medium">No connections yet</h3>
          <p class="mt-2 text-base-content/60">Create a connection to link a source to a destination.</p>
          <div class="mt-6">
            <%= link_to "Create Connection", new_connection_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
