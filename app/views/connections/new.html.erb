<% content_for(:title) { "New Connection - #{current_organization.name}" } %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <div class="text-sm breadcrumbs">
      <ul>
        <li><%= link_to "Connections", connections_path %></li>
        <li>New Connection</li>
      </ul>
    </div>
    <h1 class="text-3xl font-bold mt-2">New Connection</h1>
    <p class="text-base-content/60 mt-1">Link a source to a destination to route webhooks</p>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= render "form", connection: @connection %>
    </div>
  </div>
</div>
