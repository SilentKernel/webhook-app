<% content_for(:title) { "Invitation - Webhook App" } %>

<div class="min-h-screen flex items-center justify-center">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body text-center">
      <div class="mb-6">
        <div class="avatar placeholder mb-4">
          <div class="bg-primary text-primary-content w-16 rounded-full">
            <span class="text-2xl"><%= @invitation.organization.name[0] %></span>
          </div>
        </div>
        <h1 class="text-2xl font-bold">You're invited!</h1>
        <p class="text-base-content/60 mt-2">
          You've been invited to join <strong><%= @invitation.organization.name %></strong> as a <strong><%= @invitation.role %></strong>.
        </p>
      </div>

      <% if @invitation.invited_by %>
        <p class="text-sm text-base-content/60 mb-6">
          Invited by <%= @invitation.invited_by.full_name %>
        </p>
      <% end %>

      <% if user_signed_in? %>
        <% if current_user.email == @invitation.email %>
          <%= button_to "Accept Invitation", accept_invitation_path(@invitation.token), method: :post, class: "btn btn-primary w-full" %>
        <% else %>
          <div class="alert alert-warning mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span>This invitation was sent to <%= @invitation.email %>. You're logged in as <%= current_user.email %>.</span>
          </div>
          <%= link_to "Switch Account", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline w-full" %>
        <% end %>
      <% else %>
        <div class="space-y-4">
          <p class="text-base-content/60">Please log in or create an account to accept this invitation.</p>

          <%= link_to "Login", new_user_session_path, class: "btn btn-primary w-full" %>

          <div class="divider">OR</div>

          <%= link_to "Create Account", new_user_registration_path, class: "btn btn-outline w-full" %>
        </div>
      <% end %>

      <div class="mt-6 text-xs text-base-content/50">
        This invitation expires in <%= distance_of_time_in_words(Time.current, @invitation.expires_at) %>.
      </div>
    </div>
  </div>
</div>
