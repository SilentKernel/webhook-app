<% content_for(:title) { "#{@source.name} - Sources" } %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <div class="text-sm breadcrumbs">
        <ul>
          <li><%= link_to "Sources", sources_path %></li>
          <li><%= @source.name %></li>
        </ul>
      </div>
      <h1 class="text-3xl font-bold mt-2"><%= @source.name %></h1>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_source_path(@source), class: "btn btn-outline" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      <%= link_to source_path(@source), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this source?" }, class: "btn btn-error btn-outline" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid lg:grid-cols-2 gap-6">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Source Details</h2>
        <div class="overflow-x-auto">
          <table class="table">
            <tbody>
              <tr>
                <th class="w-1/3">Source Type</th>
                <td>
                  <% if @source.source_type %>
                    <span class="badge badge-outline"><%= @source.source_type.name %></span>
                  <% else %>
                    <span class="text-base-content/50">Custom</span>
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>Status</th>
                <td><%= status_badge(@source.status) %></td>
              </tr>
              <tr>
                <th>Verification Type</th>
                <td><span class="badge badge-outline"><%= @source.verification_type.name %></span></td>
              </tr>
              <tr>
                <th>Ingest URL</th>
                <td>
                  <div class="flex items-center gap-2" data-controller="clipboard" data-clipboard-success-content-value="Copied!">
                    <code class="bg-base-200 px-2 py-1 rounded text-sm break-all"><%= request.base_url %><%= @source.ingest_url %></code>
                    <input type="hidden" value="<%= request.base_url %><%= @source.ingest_url %>" data-clipboard-target="source">
                    <button type="button" data-action="clipboard#copy" data-clipboard-target="button" class="btn btn-ghost btn-xs" title="Copy URL">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                      </svg>
                    </button>
                  </div>
                </td>
              </tr>
              <tr>
                <th>Created</th>
                <td><%= @source.created_at.strftime("%B %d, %Y at %I:%M %p") %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="flex justify-between items-center">
          <h2 class="card-title">Connections (<%= @connections.count %>)</h2>
          <%= link_to new_connection_path(source_id: @source.id), class: "btn btn-sm btn-primary" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add Connection
          <% end %>
        </div>
        <% if @connections.any? %>
          <div class="overflow-x-auto">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Destination</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% @connections.each do |connection| %>
                  <tr>
                    <td>
                      <%= link_to connection.destination.name, destination_path(connection.destination), class: "link link-hover" %>
                    </td>
                    <td><%= status_badge(connection.status) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8 text-base-content/60">
            <p>No connections yet.</p>
            <p class="text-sm mt-1">Add a connection to forward webhooks to a destination.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
