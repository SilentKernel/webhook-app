<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal" data-action="keydown@window->modal#keydown">
    <dialog data-modal-target="dialog" class="modal" data-action="click->modal#backdropClick">
      <div class="modal-box max-w-2xl">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-bold">Create New Source</h3>
          <button type="button" class="btn btn-sm btn-circle btn-ghost" data-action="modal#close">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <%= render "form", source: @source, modal: true %>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button data-action="modal#close">close</button>
      </form>
    </dialog>
  </div>
<% end %>
