<% content_for(:title) { "Edit #{@source.name} - Sources" } %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <div class="text-sm breadcrumbs">
      <ul>
        <li><%= link_to "Sources", sources_path %></li>
        <li><%= link_to @source.name, source_path(@source) %></li>
        <li>Edit</li>
      </ul>
    </div>
    <h1 class="text-3xl font-bold mt-2">Edit Source</h1>
    <p class="text-base-content/60 mt-1">Update source settings</p>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= render "form", source: @source %>
    </div>
  </div>
</div>
