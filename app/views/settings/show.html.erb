<% content_for(:title) { "Organization Settings - #{@organization.name}" } %>

<div class="max-w-2xl mx-auto">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-6">Organization Settings</h2>

      <%= form_with model: @organization, url: settings_path, method: :patch, class: "space-y-4" do |f| %>
        <% if @organization.errors.any? %>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <ul class="text-sm list-disc list-inside">
                <% @organization.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="form-control w-full">
          <%= f.label :name, class: "label" do %>
            <span class="label-text">Organization Name</span>
          <% end %>
          <%= f.text_field :name, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <%= f.label :timezone, class: "label" do %>
            <span class="label-text">Timezone</span>
          <% end %>
          <%= f.combobox :timezone,
              ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] },
              id: "organization-timezone" %>
        </div>

        <div class="flex gap-4 mt-6">
          <%= f.submit "Save Changes", class: "btn btn-primary" %>
          <%= link_to "Cancel", dashboard_path, class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl mt-6">
    <div class="card-body">
      <h3 class="card-title">Organization Info</h3>
      <div class="stats stats-vertical lg:stats-horizontal shadow">
        <div class="stat">
          <div class="stat-title">Members</div>
          <div class="stat-value"><%= @organization.memberships.count %></div>
        </div>
        <div class="stat">
          <div class="stat-title">Created</div>
          <div class="stat-value text-lg"><%= @organization.created_at.strftime("%b %d, %Y") %></div>
        </div>
      </div>
    </div>
  </div>
</div>
