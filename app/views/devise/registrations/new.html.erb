<% content_for(:title) { "Sign Up - Webhook App" } %>

<div class="min-h-screen flex items-center justify-center py-8">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="text-center mb-6">
        <h1 class="text-3xl font-bold">Create your account</h1>
        <p class="text-base-content/60 mt-2">Start managing your webhooks today</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Organization Name <span class="text-error">*</span></span>
          </label>
          <%= text_field_tag "user[organization_name]", params.dig(:user, :organization_name), class: "input input-bordered w-full", placeholder: "Your company name", required: true %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="form-control w-full">
            <%= f.label :first_name, class: "label" do %>
              <span class="label-text">First Name <span class="text-error">*</span></span>
            <% end %>
            <%= f.text_field :first_name, class: "input input-bordered w-full", placeholder: "John", required: true %>
          </div>

          <div class="form-control w-full">
            <%= f.label :last_name, class: "label" do %>
              <span class="label-text">Last Name <span class="text-error">*</span></span>
            <% end %>
            <%= f.text_field :last_name, class: "input input-bordered w-full", placeholder: "Doe", required: true %>
          </div>
        </div>

        <div class="form-control w-full">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email <span class="text-error">*</span></span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full", placeholder: "you@example.com", required: true %>
        </div>

        <div class="form-control w-full">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">Password <span class="text-error">*</span></span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "At least 6 characters", required: true %>
          <% if @minimum_password_length %>
            <label class="label">
              <span class="label-text-alt text-base-content/60"><%= @minimum_password_length %> characters minimum</span>
            </label>
          <% end %>
        </div>

        <div class="form-control w-full">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm Password <span class="text-error">*</span></span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "Confirm your password", required: true %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Create Account", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">OR</div>

      <div class="text-center">
        <p>
          Already have an account?
          <%= link_to "Login", new_session_path(resource_name), class: "link link-primary" %>
        </p>
      </div>
    </div>
  </div>
</div>
