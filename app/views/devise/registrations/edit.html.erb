<% content_for(:title) { "Edit Profile - HookStack" } %>

<div class="max-w-2xl mx-auto">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-6">Edit Profile</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="grid grid-cols-2 gap-4">
          <div class="form-control w-full">
            <%= f.label :first_name, class: "label" do %>
              <span class="label-text">First Name</span>
            <% end %>
            <%= f.text_field :first_name, class: "input input-bordered w-full" %>
          </div>

          <div class="form-control w-full">
            <%= f.label :last_name, class: "label" do %>
              <span class="label-text">Last Name</span>
            <% end %>
            <%= f.text_field :last_name, class: "input input-bordered w-full" %>
          </div>
        </div>

        <div class="form-control w-full">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email</span>
          <% end %>
          <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full" %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <label class="label">
              <span class="label-text-alt text-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></span>
            </label>
          <% end %>
        </div>

        <div class="divider">Change Password</div>

        <div class="form-control w-full">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">New Password</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "Leave blank if you don't want to change" %>
          <% if @minimum_password_length %>
            <label class="label">
              <span class="label-text-alt text-base-content/60"><%= @minimum_password_length %> characters minimum</span>
            </label>
          <% end %>
        </div>

        <div class="form-control w-full">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm New Password</span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>

        <div class="divider">Confirm Changes</div>

        <div class="form-control w-full">
          <%= f.label :current_password, class: "label" do %>
            <span class="label-text">Current Password <span class="text-error">*</span></span>
          <% end %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered w-full", placeholder: "Required to save changes" %>
        </div>

        <div class="flex gap-4 mt-6">
          <%= f.submit "Update Profile", class: "btn btn-primary flex-1" %>
          <%= link_to "Cancel", dashboard_path, class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl mt-6">
    <div class="card-body">
      <h3 class="card-title">Failure Notifications</h3>
      <p class="text-base-content/60 mb-4">You'll receive an email when webhook deliveries permanently fail for these destinations.</p>

      <% subscriptions = resource.destination_notification_subscriptions.includes(:destination).order("destinations.name") %>
      <% if subscriptions.any? %>
        <div class="space-y-2">
          <% subscriptions.each do |subscription| %>
            <%= render "notification_subscriptions/subscription", subscription: subscription %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-6 bg-base-200 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-base-content/40 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
          <p class="text-base-content/60">No notification subscriptions</p>
          <p class="text-sm text-base-content/40">Subscribe to destinations from the destination edit page</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl mt-6">
    <div class="card-body">
      <h3 class="card-title text-error">Danger Zone</h3>
      <p class="text-base-content/60">Once you delete your account, there is no going back.</p>
      <div class="card-actions justify-end mt-4">
        <%= button_to "Delete Account", registration_path(resource_name), method: :delete, data: { turbo_confirm: "Are you sure you want to delete your account? This action cannot be undone." }, class: "btn btn-error btn-outline" %>
      </div>
    </div>
  </div>
</div>
