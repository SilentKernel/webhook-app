<% content_for(:title) { "Invite Team Member - #{current_organization.name}" } %>

<div class="max-w-xl mx-auto">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-6">Invite Team Member</h2>

      <%= form_with model: @invitation, url: invite_team_index_path, class: "space-y-4" do |f| %>
        <% if @invitation.errors.any? %>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <ul class="text-sm list-disc list-inside">
                <% @invitation.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="form-control w-full">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email Address <span class="text-error">*</span></span>
          <% end %>
          <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "colleague@example.com", required: true, autofocus: true %>
          <label class="label">
            <span class="label-text-alt text-base-content/60">An invitation email will be sent to this address</span>
          </label>
        </div>

        <div class="form-control w-full">
          <%= f.label :role, class: "label" do %>
            <span class="label-text">Role <span class="text-error">*</span></span>
          <% end %>
          <%= f.select :role, [["Member", "member"], ["Admin", "admin"]], {}, class: "select select-bordered w-full" %>
          <label class="label">
            <span class="label-text-alt text-base-content/60">
              Members can view team info. Admins can invite and remove members.
            </span>
          </label>
        </div>

        <div class="flex gap-4 mt-6">
          <%= f.submit "Send Invitation", class: "btn btn-primary flex-1" %>
          <%= link_to "Cancel", team_index_path, class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
